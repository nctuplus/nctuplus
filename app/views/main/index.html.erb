#intro{
	background-color:#ffffff;
}

.main tr{ 
	line-height: 1.6em; 
}
td.date{

	text-align: right;
}
.glyphicon{
	font-size: 0.1em;
}
#floating_link {
     position: fixed;
     right: 0;
     top: 400px;
