<%= javascript_include_tag "new-index", "data-turbolinks-track" => false %>
<%= stylesheet_link_tag "new-index", "data-turbolinks-track" => false %>
<style>
#about{
	-webkit-box-shadow: -3px -2px 79px -2px rgba(0,0,0,0.75);
	-moz-box-shadow: -3px -2px 79px -2px rgba(0,0,0,0.75);
	box-shadow: -3px -2px 79px -2px rgba(0,0,0,0.75);background:#222 100%
