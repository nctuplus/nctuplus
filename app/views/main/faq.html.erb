<%= stylesheet_link_tag 'faq' %>

<script>
$(function(){
	
	$(window).scroll(function () {
		
		var NowScroll = $(this).scrollTop()+60;
		var Now1 = (NowScroll >= 0) && (NowScroll < $('#2').offset().top);
		var Now2 = (NowScroll >= $('#2').offset().top) && (NowScroll < $('#3').offset().top);
		var Now3 = (NowScroll >= $('#3').offset().top) && (NowScroll < $('#3').offset().top+190);
		
		var goto1Data = document.getElementById("goto1");
		var goto2Data = document.getElementById("goto2");
		var goto3Data = document.getElementById("goto3");
		var goto4Data = document.getElementById("goto4");
		
		goto1Data.className ="";
		goto2Data.className ="";
		goto3Data.className ="";
		goto4Data.className ="";
		
		if(Now1) goto1Data.className ="active";
		else if(Now2) goto2Data.className ="active";
		else if(Now3) goto3Data.className ="active";
		else  goto4Data.className ="active";
		
	});

	
	$('#goto1').click(function(){
		$('html,body').animate({scrollTop:$('#1').offset().top}, 500); 
	});
	$('#goto2').click(function(){
		$('html,body').animate({scrollTop:$('#2').offset().top}, 500); 
	});
	$('#goto3').click(function(){
		$('html,body').animate({scrollTop:$('#3').offset().top}, 500); 
	});
	$('#goto4').click(function(){
		$('html,body').animate({scrollTop:$('#4').offset().top}, 500); 
	});
});

</script>

