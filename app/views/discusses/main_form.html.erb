              <input type="radio" id="hardness_star5" name="discuss[hardness_rating]" value="5" /><label class = "full" for="hardness_star5" title="Awesome - 5 stars"></label>
              <input type="radio" id="hardness_star4half" name="discuss[hardness_rating]" value="4.5" /><label class="half" for="hardness_star4half" title="Pretty good - 4.5 stars"></label>
