              <input type="radio" id="cold_star3half" name="discuss[cold_rating]" value="3.5" /><label class="half" for="cold_star3half" title="Meh - 3.5 stars"></label>
              <input type="radio" id="cold_star3" name="discuss[cold_rating]" value="3" /><label class = "full" for="cold_star3" title="Meh - 3 stars"></label>
              <input type="radio" id="cold_star2half" name="discuss[cold_rating]" value="2.5" /><label class="half" for="cold_star2half" title="Kinda bad - 2.5 stars"></label>
