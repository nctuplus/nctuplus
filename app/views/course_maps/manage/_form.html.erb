
<div class="panel-group" id="accordion">
  <div class="panel panel-primary" id="start1_div">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" id="start1_title">
        建立課程地圖
        </a>
      </h4>
    </div>
    <div id="start1" class="panel-collapse collapse in">
      <div class="panel-body">
      	<div class="col-md-offset-2">
      		<h2>新增課程地圖</h2>
			
			<%= form_for :course_map, url: course_maps_path, html:{:class=>"form-horizontal new-form"} do |f|%>
				<div class="row">
					<div class="col-md-2">
						<h4 class="text-right">標題</h4>
					</div>
					<div class="col-md-5">
						<%= f.text_field :name , :class=>"form-control" %>
					</div>
				</div>			
				<div class="row">
					<div class="col-md-2">
						<h4 class="text-right">適用系所</h4>
					</div>
					<div class="col-md-5">

						<%= f.select :department_id, options_from_collection_for_select(Department.majorable.order("degree DESC"),"id","ch_name"),{} ,{:class=>"form-control"}  %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-2">
						<h4 class="text-right">適用年度</h4>
					</div>
					<div class="col-md-5">
					<%=f.select :year, options_for_select(Semester::YEARS.map{ |y| [y, y] }),{:prompt=>'不指定'},{ :class=>'form-control'} %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-2">
						<h4 class="text-right">複製現有的</h4>
					</div> 
					<div class="col-md-5">
						<%=select_tag :copy, options_for_select(@cm.map{ |cm| [cm.name, cm.id] }), :class=>'form-control', :prompt=>'不複製' %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-2">
						<h4 class="text-right">簡介</h4>
					</div>
					<div class="col-md-5">
						<%= f.text_area :desc, :class=>"form-control", :style=>"height: 100px;"%>
					</div>
				</div>	
				
				<div class="row">
					<div class="col-md-7">
						</br>
						<%= f.submit "下一步", :class=>"btn btn-primary pull-right" %>
					</div>
				</div>
			<% end %>
		</div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
	
	var all_cm = <%= @res.to_json.html_safe%> ;
	$('.new-form').submit(function(){
		if($('#name').val().length==0){			
			return false ;
		}
		if(!confirm('確定資料無誤嗎?'))
			return false ;
			
		return true;
	});
	$('#copy').change(function(){
		var cm_id = $(this).val();
		var name = $(this).find('option:selected').text();
		if(!cm_id)
			return false ;
	
		$('#year').find('option[value="'+all_cm[cm_id].year+'"]').attr("selected",true);
		$('#course_map_department_id').find('option[value="'+all_cm[cm_id].dept_id+'"]').attr("selected",true);
		$('#name').val(name);
		
	});
});	
</script>
