<%= javascript_include_tag "new-index", "data-turbolinks-track" => false %>
<%= stylesheet_link_tag "login", "data-turbolinks-track" => false %>

<div class="bg1"></div>
<header>
  <div class="header-content container ">
    <div class="row vertical-center">
      <div class="col-md-12 col-sm-12 col-xs-12 header-content-inner">
        <h1>NCTU+</h1>
        <div>
          <h6>是交大學生嗎？請用單一入口登入享用完整功能。</h6>
        </div>
        <div class="form1">
          <%=button_tag(type: "submit", class: "btn-width-e3", onclick:"event.preventDefault();goToHref('#{user_omniauth_authorize_path(:NCTU)}');") do %>
            交大單一入口登入
          <% end %>     
          <div style="margin-top: 7px;">or</div>
          <%=button_tag(type: "submit", class: "btn-width-fb", onclick:"event.preventDefault();goToHref('#{user_omniauth_authorize_path(:facebook)}');") do %>
            Facebook登入
          <% end %>     
          <%=button_tag(type: "submit", class: "btn-width-google", onclick:"event.preventDefault();goToHref('#{user_omniauth_authorize_path(:google_oauth2)}');") do %>
            Google登入
          <% end %>
        </div>	
      </div>
    </div>
  </div>
</header>
<script>
$(function(){
  $("nav").css("background-color","transparent");
  $("h1").fitText(
      1.2, {
        minFontSize: '35px',
        maxFontSize: '65px'
      }
      );
  //$(".footer").addClass("footer-fix-bot");
});
</script>
